
// 
Во дадена датотека “broevi.txt” се запишани повеќе редови со броеви 
така што секој ред започнува со еден цел број (N>=1) што означува колку броеви следуваат 
по него во тој ред. Да се напише програма која на СИ за секој ред ќе го испечати бројот со
најголема најзначајна цифра. Читањето на броеви завршува кога ќе се прочита 0.
//



#include <stdio.h>
#include <string.h>
#define MAX 100

void wtf() {
FILE *f = fopen("broevi.txt", "w");
char c;
while((c = getchar()) != EOF) {
fputc(c, f);
}
fclose(f);
}

int kur(int n)
{
while(n>=10)
{
n/=10;
}
return n;
}


int main()
{
wtf();
FILE *f = fopen("broevi.txt", "r");
int n,i,j,max,broj,k;
while(fscanf(f,"%d",&n)!=EOF)
{
if(n==0)
{
break;
}
max=0;
k=0;
for(i=0;i<n;i++)
{
fscanf(f,"%d",&broj);

int j=kur(broj);

if(j>max)
{
max=j;
k=broj;
}

}
printf("%d\n",k);
}
fclose(f);
return 0;
}
